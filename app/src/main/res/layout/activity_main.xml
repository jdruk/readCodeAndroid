<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="br.com.codemain.teste.MainActivity">

    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline" app:layout_constraintGuide_begin="20dp"
                                          android:orientation="vertical"/>
    <GridLayout
            android:layout_width="347dp"
            android:layout_height="141dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="29dp">

        <Button
                android:text="Scanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="100dp" android:id="@+id/button"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ip"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/textIP" app:layout_constraintHorizontal_bias="0.46"
                app:layout_constraintVertical_bias="0.138"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                tools:layout_editor_absoluteY="87dp" tools:layout_editor_absoluteX="85dp" android:id="@+id/ipAddress"
                android:selectAllOnFocus="false"/>
    </GridLayout>

</android.support.constraint.ConstraintLayout>
